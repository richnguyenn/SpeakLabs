{
  "name": "speaklabs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && .\\venv\\Scripts\\python.exe main.py",
    "dev:full": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:all": "cd frontend && npm install && cd ../backend && python -m pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
